<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib 
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
    version="2.0">
 
    <namespace>http://atp.welcome.org/welcome</namespace>
 
    <tag>
        <tag-name>welcome</tag-name>
        <component>
            <component-type>components.WelcomeComponent</component-type>
        </component>
        
        <attribute>
            <name>id</name>
            <type>java.lang.String</type>
            <description>Component id</description>
            <required>false</required>
        </attribute>
        
        <attribute>
            <name>value</name>
            <type>java.lang.String</type>
            <description>Type welcome message</description>
            <required>true</required>
        </attribute>
        
        <attribute>
            <name>to</name>
            <type>java.lang.String</type>
            <description>User name</description>
            <required>true</required>
        </attribute>
    </tag>
 
</facelet-taglib>